
@{
    ViewData["Title"] = "StaffLogin";
}

<div class="container-fluid">
    <div class="row align-items-center justify-content-center custom-min-vh-90">
        <div class="rounded-border-box d-flex flex-column align-items-center justify-content-center">
            <h2 class="text-center mb-4">Staff Login</h2>
            <form method="post" action="~/Home/LoginStaff" class="staff-form">
                <div class="form-group">
                    <label for="staffLoginId">Login ID</label>
                    <input type="text" name="staffLoginId"class="form-control" id="staffLoginId" placeholder="Enter Login ID" required>
                </div>
                <div class="form-group">
                    <label for="staffLoginPassword">Password</label>
                    <input type="password" name="staffLoginPassword"class="form-control" id="staffLoginPassword" placeholder="Enter Password" required>
                </div>
                <span id="invalidMessage" style="color: red; margin-bottom:20px;">@TempData["Message"]</span>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>
