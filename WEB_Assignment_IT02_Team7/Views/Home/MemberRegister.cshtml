@model WEB_Assignment_IT02_Team7.Models.Member
@{
    ViewData["Title"] = "MemberRegister";
}

<div class="memberRegisterForm" style="margin-top: 70px">
    <h2 style="text-align:center;">Member Register</h2>
    <form asp-action="MemberRegister" method="post">
        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="Salutation"></label>
                <select asp-for="Salutation" class="form-select" asp-items="@ViewData["SalutationList"] as List<SelectListItem>">
                </select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Name"></label>
                <div class="d-flex flex-column">
                    <input asp-for="Name" type="text" class="form-control">
                    <span asp-validation-for="Name" class="text-danger mt-1"></span>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="BirthDate"></label>
                <div class="d-flex flex-column"> 
                    <input asp-for="BirthDate" type="date" class="form-control" id="birthdate">
                    <span asp-validation-for="BirthDate" class="text-danger mt-1"></span>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="TelNo"></label>
                <div class="d-flex flex-column">
                    <input asp-for="TelNo" type="text" class="form-control">
                    <span asp-validation-for="TelNo" class="text-danger mt-1"></span>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-5">
                <label asp-for="City"></label>
                <div class="d-flex flex-column">
                    <input asp-for="City" type="text" class="form-control">
                    <span asp-validation-for="City" class="text-danger mt-1"></span>
                </div>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Country"></label>
                <div class="d-flex flex-column">
                    <input asp-for="Country" type="text" class="form-control">
                    <span asp-validation-for="Country" class="text-danger mt-1"></span>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-5">
                <label asp-for="EmailAddr"></label>
                <div class="d-flex flex-column">
                    <input asp-for="EmailAddr" type="text" class="form-control">
                    <span asp-validation-for="EmailAddr" class="text-danger mt-1"></span>
                </div>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Password"></label>
                <div class="d-flex flex-column">
                    <input asp-for="Password" type="password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger mt-1"></span>
                </div>
            </div>
        </div>
        <div class="form-row">            
            <div class="form-group col-md-5">
                <label asp-for="ConfirmPassword"></label>
                <div class="d-flex flex-column">
                    <input asp-for="ConfirmPassword" type="password" class="form-control">
                    <span asp-validation-for="ConfirmPassword" class="text-danger mt-1"></span>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="d-flex justify-content-between">
                <div class="form-group">
                    <button type="submit" value="Register" class="btn btn-primary" style="margin-top: 20px;">
                        Register
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        window.onload = function () {
            var date = new Date();
            var day = date.getDate();
            var month = date.getMonth() + 1;
            var year = date.getFullYear();

            if (month < 10) month = '0' + month.toString();
            if (day < 10) day = '0' + day.toString();

            var maxDate = year + '-' + month + '-' + day;
            document.getElementById('birthdate').setAttribute('max', maxDate);
        };
    </script>
}
