@model WEB_Assignment_IT02_Team7.Models.FeedbackEnquiry

@{
    ViewData["Title"] = "FeedbackEnquiries";
}

<div class="createFeedbackEnquiryForm">
    <h2 style="text-align:center;">Create Feedback/Enquiry</h2>
    <form asp-action="CreateFeedbackEnquiries" method="post">
        <div class="form-group">
            <textarea asp-for="Content" class="form-control" rows="15" placeholder="Type your feedback/enquiries here."></textarea>
            <span asp-validation-for="Content" class="text-danger mt-1"></span>
        </div>
        <div class="form-group">
            <button type="submit" value="Submit" class="btn btn-primary" style="margin-top: 20px;">Submit</button>
        </div>
    </form>
</div>